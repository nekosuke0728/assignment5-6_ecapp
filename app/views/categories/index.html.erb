<%= render_breadcrumbs %>

<hr>

<% if admin_signed_in? %>
  <h1>カテゴリ管理</h1>
  <%= link_to "新規追加", new_category_path %>
<% else %>
  <h1>カテゴリ一別</h1>  
<% end %>

<br>

<%= paginate @categories %>

<hr>

<% @categories.each do |category| %>
  <%= link_to category.name,"categories/#{category.id}" %>
  <% if admin_signed_in? %>
  <%= link_to "編集","categories/#{category.id}/edit" %>
  <%= link_to "削除","categories/#{category.id}", method: :delete, data: { confirm: "削除してよろしいですか？" } %>
  <% end %>
  <br>
<% end %>
